{
  "extends": "@repo/typescript-config/nextjs.json",
  "baseUrl": ".",
  "paths": {
    "@ui/*": ["./src/components/ui/*"],
    "@lib/*": ["./src/lib/*"]
  },
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mdx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
